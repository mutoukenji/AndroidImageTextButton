<resources>
    <declare-styleable name="ImageTextButton">
        <attr name="android:text" />
        <attr name="android:textSize" />
        <attr name="android:color" />
        <attr name="android:drawable" />
        <attr name="drawablePadding" format="dimension" />
        <attr name="drawableWidth" format="dimension|enum">
            <enum name="fill_parent" value="-1"/>
            <enum name="match_parent" value="-1"/>
            <enum name="wrap_content" value="-2"/>
        </attr>
        <attr name="drawableHeight" format="dimension|enum">
            <enum name="fill_parent" value="-1"/>
            <enum name="match_parent" value="-1"/>
            <enum name="wrap_content" value="-2"/>
        </attr>
        <attr name="drawablePosition">
            <enum name="top" value="48" />
            <enum name="bottom" value="80" />
            <enum name="left" value="3" />
            <enum name="right" value="5" />
            <enum name="start" value="8388611" />
            <enum name="end" value="8388613" />
