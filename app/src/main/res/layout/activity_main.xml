<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tech.yaog.widgets.MainActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <tech.yaog.widgets.ImageEditText
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:drawableLeft="@mipmap/ic_launcher_round"
            android:hint="123456"
            app:iee_drawableHeight="wrap_content"
            app:iee_drawableWidth="wrap_content"/>

        <tech.yaog.widgets.ImageTextButton
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:drawableHeight="15dp"
            app:drawableWidth="15dp"
            app:drawablePadding="2dp"
            app:drawablePosition="end"
            android:drawable="@mipmap/ic_launcher"/>

        <tech.yaog.widgets.NumericKeypad
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>
